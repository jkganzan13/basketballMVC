
@model basketballMVC.Season

@{

}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Season</title>
</head>
<body>
    @using (Html.BeginForm("CreateSeason", "Rosters", FormMethod.Post, new { id = "createForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <fieldset>
                <legend>Season Details</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.SeasonID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Label((string)@ViewBag.SeasonID, new { @class = "control-label" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SeasonStart, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SeasonStart, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SeasonStart, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SeasonEnd, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SeasonEnd, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SeasonEnd, "", new { @class = "text-danger" })
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Playoff Details</legend>
                <div class="form-group">
                    @Html.Label("Playoff Format", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select id="playoff" disabled="disabled" class="form-control">
                            <option selected="selected">Single Elimination</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("No of Playoff Teams", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <select id="playoffNum" disabled="disabled" class="form-control">
                            <option selected="selected">4 (2 week Playoff)</option>
                        </select>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Teams For Season</legend>
                <div class="form-group">
                    <div class="col-md-10">
                        @foreach (var t in (SelectList)ViewBag.Teams)
                        {
                            <div class="checkbox">
                                <input type="checkbox" name="teams" value="@t.Value" id="@t.Value" />
                                <label for="@t.Text">@t.Text</label>
                            </div>
                        }                        
                    </div>
                </div>
            </fieldset>
        </div>
    }
</body>
</html>