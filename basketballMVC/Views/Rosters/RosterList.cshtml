@model IEnumerable<basketballMVC.Roster>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Roster List</title>
</head>
<body>
    <h4>Player List</h4>

    <div class="row">
        @{ int i = 0; }
        @foreach (var item in Model)
        {
            if (i % 3 == 0 && i != 0)
            {
                @:</div><div class="row">

            }
            <div class="col-md-3">
                @item.Player.LastName, @item.Player.FirstName
            </div>
            i++;
        }
    </div>

    <script>
        var pageName = 'Roster';
    </script>
</body>
</html>