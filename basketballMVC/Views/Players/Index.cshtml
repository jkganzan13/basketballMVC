@model IEnumerable<basketballMVC.Player>

@section Scripts{
    <script>var pageName = 'Player';</script>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Player List</h2>
    <h3>List of Players</h3>

    @Html.Partial("_Error")

    <p>
        @Html.ActionLink("Add Player", "Create", "Players", null, new { @class = "createModal" })
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position.PositionName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.PositionName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PlayerID }, new { @class = "editModal" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PlayerID }, new { @class = "detailsModal" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PlayerID }, new { @class = "deleteModal" })                   
                </td>
            </tr>
        }

    </table>
</body>
</html>
